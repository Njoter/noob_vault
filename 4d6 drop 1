#include <stdio.h>
#include <cs50.h>
#include <stdlib.h>
#include <time.h>

// Function for comparing elements in array
int cmpfunc (const void * a, const void * b);

int main(void)
{
// To seed rand
    srand(time(NULL));

// Dice rolls
    int n = 4;
    int dice[n];

    for (int i = 0; i < n; i++)
    {
        dice[i] = (rand() % 6) + 1;
    }

// Sort in ascending order
    qsort(dice, n, sizeof(int), cmpfunc);

// add the three highest
    int t = 0;
    for (int i = 1; i < n; i++)
    {
        t += (dice[i]);
    }
    printf("%i\n", t);
}

// Function for comparing elements in array
int cmpfunc (const void * a, const void * b)
{
    return ( *(int*)a - *(int*)b );
}
